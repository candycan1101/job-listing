<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<label for="email" class="cols-sm-2 control-label">Your Email</label></br>
<div class="input-group">
<span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
    <%= f.email_field :email, required: true, placeholder: "Enter your Email", autofocus: true %>
  </div>
</br>

<label for="password" class="cols-sm-2 control-label">Password</label>
<div class="input-group">
  <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
    <%= f.password_field :password, required: true, placeholder: "Enter your password", autocomplete: "off" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>
</br>


  <label for="confirm" class="cols-sm-2 control-label">Confirm Password</label>
  <div class="input-group">
    <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
    <%= f.password_field :password_confirmation, required: true, placeholder: "Confirm your password", autocomplete: "off" %>
  </div>
</br>


  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success btn-ms login-button" %>
  </div>

<% end %>
</br>

<%= render "devise/shared/links" %>
